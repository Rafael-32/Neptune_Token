pragma solidity ^0.8.4;

import "@openzeppelin/contracts@4.7.3/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts@4.7.3/token/ERC20/extensions/ERC20Burnable.sol";
import "@openzeppelin/contracts@4.7.3/access/Ownable.sol";

// Here i am using "ERC20Burnable" to burn the Tokens
// Using the mint option in Remix IDE we can be able to generate additional supply of tokens
contract Neptune is ERC20, ERC20Burnable, Ownable {
    constructor() ERC20("Neptune", "NPT") {
        _mint(msg.sender, 100000 * 10 ** decimals());
    }

    function mint(address to, uint256 amount) public onlyOwner {
        _mint(to, amount);
    }
}
